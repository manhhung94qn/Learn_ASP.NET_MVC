@model MyStore.Models.OrderModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal mx-auto d-block">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="mb-1">Tên người nhận: </span>
            <div >
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", id = "or-CustomerName", placeholder = "Nhập tên người nhận..." } })
                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="mb-1">Nhập địa chỉ khách hàng</span>
            <div >
                @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control", id="or-CustomerAddress", placeholder="Nhập địa chỉ người nhận..." } })
                @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="mb-1">Số điện thoại:</span>
            <div >
                @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control",id="or-CustomerPhone", placeholder = "Nhập số điện thoại..." } })
                @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="mb-1">Nhập email của bạn:</span>
            <div >
                @Html.EditorFor(model => model.CustomerMail, new { htmlAttributes = new { @class = "form-control",id="or-CustomerMail", placeholder = "Nhập địa chỉ email..." } })
                @Html.ValidationMessageFor(model => model.CustomerMail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="offset-md-3 col-md-6">
                <input type="submit" value="Mua Hàng" class="btn btn-success w-100 btn-buy" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
